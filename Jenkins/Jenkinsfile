pipeline {
    agent {
     node {
    		label 'myvm'
    		}
    }
     options    {
                timestamps()
                buildDiscarder(logRotator(numToKeepStr: '1', artifactNumToKeepStr: '1'))
                timeout(time: 60, unit: 'MINUTES')
                disableConcurrentBuilds()
                }

    stages {
        stage('AppCode-Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/padmasrivuppuluri/aws-b4-maven-app'
            }
            }
        stage('App-Build') {
            steps {
                sh 'mvn clean package'
                //sh 'sleep 100'
            }
            }
        stage('Docker Build & Push') {
            steps {

            script {

            withCredentials([string(credentialsId: 'docker-token', variable: 'token')]) {

    			sh 'docker login -u padmasrivuppuluri -p ${token}'
			}

            }   
                sh 'docker build . -t padmasrivuppuluri/cicd:v2'
                sh 'docker push padmasrivuppuluri/cicd:v2'
                echo "Job is successfully completed"
            }                        
        }
        stage ('K8SManiFest-Checkout') {
                steps {

                    git 'https://github.com/pythonlifedevops/aws-k8s-cicd.git'

                }
            }

        stage ('Kubernetes AutoDeployment') {
             steps {

                    dir('manifests')
                     {

                    sh 'ls -l'
                    // kubectl apply -f <fileName>.yml
                    sh 'kubectl --server=https://6AD51DC53C03513CD674EFCDDDC67269.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6IlpWaWVsdGlCbEp4aTFXdnlmWWVkd21pYUJWelpDdGJJeXJYTEFzQl9kN0kifQ..IhN7eT4uLkNXWMVMvivBFTaAO9bxztcblBV_rpg_3XkCvu4soENdiM2dWCrBmRP_h5gG9Coqyzlav-qCl1UBdKXhKFEVJYf8hUaOzEXoYLz1-Vv2Xkp9vNeCU_msaT6Mfb2CLwTkq7D4pAhyw8E_kVVbvgG2-ol26lNs7N9nzyTyGuaB9xFa2dq8ByDbbzl5uYJudHvgdpMNQaftmWqDLtlBlYDzlXdHht0YYDYaqN1JvGPll-ZHeDaNcki4U0gC0HYk4F4jf5CGwn0sjq5R6KCkLAGM51vcDK30CYc7RSaoMDxl1iXyzEE0fRTFTr5OHwG6jOabs9YqXlRSSamEow" apply -f deployment.yml'

                    sh 'kubectl --server=https://6AD51DC53C03513CD674EFCDDDC67269.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6IlpWaWVsdGlCbEp4aTFXdnlmWWVkd21pYUJWelpDdGJJeXJYTEFzQl9kN0kifQ..IhN7eT4uLkNXWMVMvivBFTaAO9bxztcblBV_rpg_3XkCvu4soENdiM2dWCrBmRP_h5gG9Coqyzlav-qCl1UBdKXhKFEVJYf8hUaOzEXoYLz1-Vv2Xkp9vNeCU_msaT6Mfb2CLwTkq7D4pAhyw8E_kVVbvgG2-ol26lNs7N9nzyTyGuaB9xFa2dq8ByDbbzl5uYJudHvgdpMNQaftmWqDLtlBlYDzlXdHht0YYDYaqN1JvGPll-ZHeDaNcki4U0gC0HYk4F4jf5CGwn0sjq5R6KCkLAGM51vcDK30CYc7RSaoMDxl1iXyzEE0fRTFTr5OHwG6jOabs9YqXlRSSamEow" apply -f service.yml'
                    
                    sh 'kubectl --server=https://6AD51DC53C03513CD674EFCDDDC67269.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6IlpWaWVsdGlCbEp4aTFXdnlmWWVkd21pYUJWelpDdGJJeXJYTEFzQl9kN0kifQ..IhN7eT4uLkNXWMVMvivBFTaAO9bxztcblBV_rpg_3XkCvu4soENdiM2dWCrBmRP_h5gG9Coqyzlav-qCl1UBdKXhKFEVJYf8hUaOzEXoYLz1-Vv2Xkp9vNeCU_msaT6Mfb2CLwTkq7D4pAhyw8E_kVVbvgG2-ol26lNs7N9nzyTyGuaB9xFa2dq8ByDbbzl5uYJudHvgdpMNQaftmWqDLtlBlYDzlXdHht0YYDYaqN1JvGPll-ZHeDaNcki4U0gC0HYk4F4jf5CGwn0sjq5R6KCkLAGM51vcDK30CYc7RSaoMDxl1iXyzEE0fRTFTr5OHwG6jOabs9YqXlRSSamEow" rollout restart deployment/java-app-deployment'
                    
