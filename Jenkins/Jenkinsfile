pipeline {
    agent {
     node {
    		label 'myvm'
    		}
    }
     options    {
                timestamps()
                buildDiscarder(logRotator(numToKeepStr: '1', artifactNumToKeepStr: '1'))
                timeout(time: 10, unit: 'MINUTES')
                disableConcurrentBuilds()
                }

    stages {
        stage('AppCode-Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/padmasrivuppuluri/aws-b4-maven-app'
            }
            }
        stage('App-Build') {
            steps {
                sh 'mvn clean package'
                //sh 'sleep 100'
            }
            }
        stage('Docker Build & Push') {
            steps {

            script {

            withCredentials([string(credentialsId: 'docker-token', variable: 'token')]) {

    			sh 'docker login -u padmasrivuppuluri -p ${token}'
			}

            }   
                sh 'docker build . -t padmasrivuppuluri/cicd:v2'
                sh 'docker push padmasrivuppuluri/cicd:v2'
                echo "Job is successfully completed"
            }                        
        }
        stage ('K8SManiFest-Checkout') {
                steps {

                    git 'https://github.com/padmasrivuppuluri/aws-k8s-cicd-1.git'

                }
            }

        stage ('Kubernetes AutoDeployment') {
             steps {

                    dir('manifests')
                     {

                    sh 'ls -l'
                    // kubectl apply -f <fileName>.yml
                    sh 'kubectl --server=https://9EFD0F87FAEB08C9B1B45518A5B7B94D.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6ImtjeEk5VWptcGVMSFNNLURFLW85NXIxQnVraFhjbnZXZXNYREF0TlVTTTQifQ..hkxWJsATwXYhqiALQC8i9PEWF6uZyxCnAe9BhRZxgUytZUF59PREkPdg_1gwRioZkRmT2oVrcbG2XTIojOVXHkcDnQI4PROP8L-5KuyX79iW3H611rpG2X0xyZsN9tN2gZ3t0_xecnh7_OdSZUkMt9ih_gyzC3tv_KV3X4OjILdPApUAREPlRONu5eI1KMqyi2TwuiKAM8A3gqwaWHaUL55V58VrsxOQs2VP0OIaK4Bmom76Er-oW3WuOkEhYoX_fz65sGu7fJnaLF_Qsl-Fi6JGPG6uVp9_RF5GZjgzwqTNBktDsQc_IRZG53iJlyek3jDy2q1dfv9HgYkZPH0yfQ" apply -f deployment.yml'

                    sh 'kubectl --server=https://9EFD0F87FAEB08C9B1B45518A5B7B94D.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6ImtjeEk5VWptcGVMSFNNLURFLW85NXIxQnVraFhjbnZXZXNYREF0TlVTTTQifQ..hkxWJsATwXYhqiALQC8i9PEWF6uZyxCnAe9BhRZxgUytZUF59PREkPdg_1gwRioZkRmT2oVrcbG2XTIojOVXHkcDnQI4PROP8L-5KuyX79iW3H611rpG2X0xyZsN9tN2gZ3t0_xecnh7_OdSZUkMt9ih_gyzC3tv_KV3X4OjILdPApUAREPlRONu5eI1KMqyi2TwuiKAM8A3gqwaWHaUL55V58VrsxOQs2VP0OIaK4Bmom76Er-oW3WuOkEhYoX_fz65sGu7fJnaLF_Qsl-Fi6JGPG6uVp9_RF5GZjgzwqTNBktDsQc_IRZG53iJlyek3jDy2q1dfv9HgYkZPH0yfQ" apply -f service.yml'
                    
                    sh 'kubectl --server=https://9EFD0F87FAEB08C9B1B45518A5B7B94D.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6ImtjeEk5VWptcGVMSFNNLURFLW85NXIxQnVraFhjbnZXZXNYREF0TlVTTTQifQ..hkxWJsATwXYhqiALQC8i9PEWF6uZyxCnAe9BhRZxgUytZUF59PREkPdg_1gwRioZkRmT2oVrcbG2XTIojOVXHkcDnQI4PROP8L-5KuyX79iW3H611rpG2X0xyZsN9tN2gZ3t0_xecnh7_OdSZUkMt9ih_gyzC3tv_KV3X4OjILdPApUAREPlRONu5eI1KMqyi2TwuiKAM8A3gqwaWHaUL55V58VrsxOQs2VP0OIaK4Bmom76Er-oW3WuOkEhYoX_fz65sGu7fJnaLF_Qsl-Fi6JGPG6uVp9_RF5GZjgzwqTNBktDsQc_IRZG53iJlyek3jDy2q1dfv9HgYkZPH0yfQ" rollout restart deployment/java-app-deployment'
                    
